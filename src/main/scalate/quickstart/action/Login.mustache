  <script>
  var example=jQuery.noConflict();
  example(function() {
    var dialog, form
 

 
    function addUser() {
    	var       name = example( "#name" ),
      email = example( "#email" ),
      password = example( "#password2" ),
      phone = example( "#phone" ),
      userid = example( "#userid2" ),
      tips = example( ".validateTips" );
      if(name.val() == "" || password.val() == "" || userid.val() == ""){
        return;
      }
      if(password.val().length < 4){ return; }
      //alert(name.val());
      var map = {"name":name.val(),"email":email.val(), "pass":password.val(),"userid":userid.val(), "phone":phone.val()};
	    $.ajax({
	        url: "/createuser", // .replace('http://', 'https://'),
	        type: 'post',
	        dataType: 'json',
	         async: false,
	         data: map,
	        success: function(data) {
	        	alert("추가되었습니다.")	;
	        	dialog.dialog( "close" );
	        } 
	    }); 
    }
 
 	function cancel() {
 		dialog.dialog( "close" );
 	}
    dialog = example( "#dialog-form" ).dialog({
      autoOpen: false,
      height: 400,
      width: 450,
      modal: true,
      buttons: {
